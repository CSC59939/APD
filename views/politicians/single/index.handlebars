<main role="main" class="container">

<!-- Facebook Button Widget Script -->
<div id="fb-root"></div>
<script>(function (d, s, id) {
		var js, fjs = d.getElementsByTagName(s)[0];
		if (d.getElementById(id)) return;
		js = d.createElement(s); js.id = id;
		js.src = 'https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.12';
		fjs.parentNode.insertBefore(js, fjs);
	}(document, 'script', 'facebook-jssdk'));</script>

<!-- YouTube Button Widget Script -->
<script src="https://apis.google.com/js/platform.js"></script>

<div>
	<div id="politician">
		<h2> {{politician.first_name}} {{politician.last_name}} </h2>
		<hr class="small" />
		<div class="row justify-content-left">
			<div class="col-md-3 justify-content-left">
				<img src="https://theunitedstates.io/images/congress/225x275/{{politician.member_id}}.jpg" alt="{{politician.first_name}} {{politician.last_name}}">
				<br><br>
				{{#if politician.twitter}}
				<a href="https://twitter.com/{{politician.twitter}}" class="twitter-follow-button" data-show-count="false">Follow</a>
				<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>{{/if}}
				<br> {{#if politician.facebook}}
				<div class="fb-like" data-href="https://www.facebook.com/{{politician.facebook}}" data-layout="button" data-action="like"
				 data-size="small" data-show-faces="false" data-share="false"></div>
				{{/if}}
				{{#if politician.youtube}}
				<div class="g-ytsubscribe" data-channel="{{politician.youtube}}" data-layout="default" data-count="hidden"></div>
				{{/if}}
			</div>
			<div class="col-md-8 justify-content-right">
			<div class="card">
			<div class="card-body">
			<table style="margin: 0 auto;">
				<tr> <td><b> Role:</b></td> <td align="center"> {{role.title}} </td> </tr>
				<tr> <td><b> State:</b></td> <td align="center"> {{role.state}}</td> </tr>

				<td>&nbsp;</td><td>&nbsp;</td>
				<tr> <td><b> Office:</b></td> <td align="center"> {{role.office}} </td> </tr>
				<tr> <td><b> Political party:</b></td> <td align="center"> {{role.party}} </td> </tr>

				<tr> <td><b> Start Date:</b></td> <td align="center"> {{role.start_date}} </td> </tr>
				<tr> <td><b> End Date:</b></td> <td align="center"> {{role.end_date}} </td> </tr>

				<td>&nbsp;</td><td>&nbsp;</td>
				<tr> <td><b> Phone:</b></td> <td align="center"> <a href="tel:{{role.phone}}">{{role.phone}}</a> </td> </tr>
				<tr> <td><b> Website:</b></td> <td align="center"> <a href={{politician.url}}>{{politician.url}}</a> </td> </tr>
			</table>
			</div>
			</div>
			<br>
			<p>
  			<a class="btn btn-primary" data-toggle="collapse" href="#multiCollapseExample1" role="button" aria-expanded="false" aria-controls="multiCollapseExample1">Bills Sponsored</a>
  			<button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#multiCollapseExample2" aria-expanded="false" aria-controls="multiCollapseExample2">Recent Bills</button>
			</p>

			<div class="row">
  				<div class="col">
    			<div class="collapse multi-collapse" id="multiCollapseExample1">
      			<div class="card card-body">
        		<p><b> Bills sponsored:</b> {{role.bills_sponsored}}</p>
        		&nbsp;
        		<p><b> Bills co-sponsored:</b> {{role.bills_cosponsored}}</p>
        		&nbsp;
        		<p><b> Most recent Vote:</b> {{role.most_recent_vote}} </p>
      			</div>
    		</div>
  			</div>
  			<div class="col">
    		<div class="collapse multi-collapse" id="multiCollapseExample2">
      		<div class="card card-body">
        	<p><b> Most recent Introduced Bill:</b> {{role.recent_bills_introduced}} </p>
       		&nbsp;
        <p><b> Most recent Updated Bill:</b> {{role.recent_bills_updated}}</p>
      	</div>
    	</div>
  		</div>
		</div>
			</div>
		</div>
	</div>
</div>
<hr class="small" />made 
<div class=".container-fluid">
	<div class="row">
		<!-- Twitter Feed -->
		<div class="col-md-6 justify-content-center">
			<a class="twitter-timeline" data-height="800" href="https://twitter.com/{{politician.twitter}}">Tweets</a>
			<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
		</div>

		<div class="col-md-6 justify-content-center">
			<div class="fb-page" data-href="https://www.facebook.com/{{politician.facebook}}" data-tabs="timeline" data-width="500" data-height="800"
			 data-small-header="true" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="false">
				<blockquote cite="https://www.facebook.com/{{politician.facebook}}" class="fb-xfbml-parse-ignore">
					<a href="https://www.facebook.com/{{politician.facebook}}"></a>
				</blockquote>
			</div>
		</div>
	</div>
</div>



</div>
</main>
