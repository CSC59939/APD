<div >
	<ul class="nav nav-tabs">
  	<li class="active"><a data-toggle="tab" href="#home">Senators</a></li>
  	<li><a data-toggle="tab" href="#menu1">Representatives</a></li>
	</ul>

	<div class="tab-content">
  	<div id="Senators" class="tab-pane fade in active">
			<h2> The senators of {{state}} </h2>
			<hr class= "small"/>
			<div class = "row">
			{{#each senators}}
			<div class="col-md-3 justify-content-left">
				<h3>{{this.name}}</h3>
				<p> role: {{this.role}}</p>
				<p> gender: {{this.gender}} </p>
				<p> political party: {{this.party}}</p>
			</div>
			{{/each}}
			</div>
  	</div>

  	<div id="Representatives" class="tab-pane fade">
			<h2> Current representative of the first district of {{state}} </h2>
			<hr class= "small"/>
			<div class = "row justify-content-left">
			{{#each representatives}}
				<div class="col-md-3 offset-md-2">
					<h3>{{this.name}}</h3>
					<p> role: {{this.role}}</p>
					<p> gender: {{this.gender}} </p>
					<p> political party: {{this.party}}</p>
				</div>
			{{/each}}
			</div>
  	</div>
</div>

</div>
