<div >

	<h2> Current senators of {{state}} </h2>
	<hr class= "small"/>
	<div class = "row">
	{{#each senators}}
		<div class="col-md-3 offset-md-2 justify-content-left">
			<h3>{{this.name}}</h3>
			<p> role: {{this.role}}</p>
			<p> gender: {{this.gender}} </p>
			<p> political party: {{this.party}}</p>
		</div>
	{{/each}}
	</div>

	<h2> Current representative of the first district of {{state}} </h2>
	<hr class= "small"/>
	<div class = "row justify-content-left">
	{{#each representatives}}
		<div class="col-md-3 offset-md-2">
			<h3>{{this.name}}</h3>
			<p> role: {{this.role}}</p>
			<p> gender: {{this.gender}} </p>
			<p> political party: {{this.party}}</p>
		</div>
	{{/each}}
	</div>



</div>